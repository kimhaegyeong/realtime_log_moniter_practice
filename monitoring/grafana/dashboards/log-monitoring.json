            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "id": 3,
            "options": {
                "legend": {
                    "displayMode": "list",
                    "placement": "bottom"
                }
            },
            "targets": [
                {
                    "collection": "logs",
                    "aggregate": [
                        {
                            "$match": {
                                "timestamp": {
                                    "$gte": {
                                        "$date": {
                                            "$subtract": [
                                                "$timestamp",
                                                3600000
                                            ]
                                        }
                                    }
                                }
                            }
                        },
                        {
                            "$group": {
                                "_id": {
                                    "$dateToString": {
                                        "format": "%Y-%m-%dT%H:00:00Z",
                                        "date": "$timestamp"
                                    }
                                },
                                "count": {
                                    "$sum": 1
                                }
                            }
                        },
                        {
                            "$sort": {
                                "_id": 1
                            }
                        }
                    ]
                }
            ],
            "title": "Logs Over Time (Hourly)",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "grafana-mongodb-datasource",
                "uid": "mongodb"
            },
            "fieldConfig": {
